<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/light_medium_gray">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:id="@+id/recentlyImage">

        <ImageView
            android:id="@+id/mostbookcover"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"

            android:layout_alignParentBottom="true"

            android:scaleType="centerCrop"
            android:src="@drawable/b5"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/mosttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mostbookcover"
            android:fontFamily="@font/baloo"
            android:text="First Books"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mostbauthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S.K.H SHARMA"
            android:layout_below="@id/mosttitle"
            android:layout_toRightOf="@id/mostbookcover"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:fontFamily="@font/baloo"/>

        <RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@id/mostbauthor"
            android:layout_toRightOf="@id/mostbookcover"
            android:layout_marginLeft="10dp"
            android:rating="4"/>

       <!-- <TextView
            android:id="@+id/nov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000" />-->

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mostbauthor"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/mostbookcover"
            android:layout_toRightOf="@+id/mostbookcover"
            android:text="views" />-->

        <TextView
            android:id="@+id/mostdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingbar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_toEndOf="@+id/mostbookcover"
            android:layout_toRightOf="@+id/mostbookcover"
            android:text="SOME RANDOM DESCRIPTON"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>